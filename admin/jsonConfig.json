{
  "type": "tabs",
  "items": {
    "mainSettings": {
      "type": "panel",
      "label": "Main settings",
      "items": {
        "_connectionHeader": {
          "type": "header",
          "text": "ASUS Router Connection",
          "size": 3
        },
        "asus_ip": {
          "type": "text",
          "label": "Router IP or Hostname",
          "placeholder": "192.168.1.1",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "ssh_port": {
          "type": "number",
          "label": "SSH Port",
          "min": 1,
          "max": 65535,
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "_authHeader": {
          "type": "header",
          "text": "Authentication",
          "size": 3
        },
        "asus_user": {
          "type": "text",
          "label": "Login User",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "asus_pw": {
          "type": "password",
          "label": "Login Password (if not using Key File)",
          "visible": "!data.keyfile",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "keyfile": {
          "type": "text",
          "label": "Path to Private Key File (optional)",
          "placeholder": "/path/to/private/key",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "keyfile_passphrase": {
          "type": "password",
          "label": "Passphrase for Key File (if encrypted)",
          "visible": "!!data.keyfile",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "_intervalHeader": {
          "type": "header",
          "text": "Polling Configuration",
          "size": 3
        },
        "interval": {
          "type": "number",
          "label": "Polling interval (ms)",
          "min": 5000,
          "help": "Minimum: 5000ms (5 seconds)",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        },
        "active_interval": {
          "type": "number",
          "label": "Time Device is not active anymore (ms)",
          "min": 60000,
          "help": "Minimum: 60000ms (60 seconds / 1 minute)",
          "xs": 12,
          "sm": 12,
          "md": 6,
          "lg": 4,
          "xl": 4
        }
      }
    },
    "devices": {
      "type": "panel",
      "label": "Devices to Monitor",
      "items": {
        "devices": {
          "type": "table",
          "xs": 12,
          "sm": 12,
          "md": 12,
          "lg": 12,
          "xl": 12,
          "label": "Addresses to monitoring",
          "items": [
            {
              "type": "text",
              "attr": "name",
              "title": "Name",
              "width": "40%"
            },
            {
              "type": "text",
              "attr": "mac",
              "title": "MAC Address",
              "width": "40%",
              "placeholder": "AA:BB:CC:DD:EE:FF"
            },
            {
              "type": "checkbox",
              "attr": "active",
              "title": "Enabled",
              "width": "20%",
              "default": true
            }
          ]
        }
      }
    }
  }
}
